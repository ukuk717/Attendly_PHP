{
  "name": "attendly/php-app",
  "description": "Attendly PHP CGI skeleton for Lolipop Standard plan",
  "type": "project",
  "require": {
    "php": "^8.1",
    "ext-pdo": "*",
    "ext-mysqlnd": "*",
    "vlucas/phpdotenv": "^5.6",
    "slim/slim": "^4.14",
    "slim/psr7": "^1.8",
    "phpmailer/phpmailer": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Attendly\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public",
    "cleanup-phpmailer-oauth-helper": "php ./scripts/cleanup_phpmailer_oauth_helper.php",
    "post-install-cmd": [
      "@cleanup-phpmailer-oauth-helper"
    ],
    "post-update-cmd": [
      "@cleanup-phpmailer-oauth-helper"
    ]
  },
  "scripts-descriptions": {
    "cleanup-phpmailer-oauth-helper": "Remove PHPMailer's get_oauth_token.php helper to prevent exposing OAuth credential helper scripts on shared hosting."
  }
}
